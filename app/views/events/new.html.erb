<%= form_for @event, url: {action: "create"} do |f| %>

  <div class="field">
    <div class="control">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input", autofocus: true%>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :description, class: "label" %>
      <%= f.text_field :description, class: "input" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :held_on, class: "label" %>
      <%= f.date_select :held_on, class: "input" %>
    </div>
  </div>



  <%= f.submit "Create the event", class: "button is-medium" %>
<% end %>