<%= form_for @appearence, url: {action: "create"} do |f| %>

  <div class="field">
    <div class="control">
      <%= f.label :event_id, class: "label" %>
      <%= f.text_field :event_id, class: "input" %>
    </div>
  </div>


  <div class="field">
    <div class="control">
      <%= f.label :attendee_id, class: "label" %>
      <%= f.text_field :attendee_id, class: "input" %>
    </div>
  </div>

  <%= f.submit "Add guest to event", class: "button is-medium" %>
<% end %>



